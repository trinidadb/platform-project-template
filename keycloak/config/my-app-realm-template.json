{
  "id": "${KEYCLOAK_REALM_NAME}",
  "realm": "${KEYCLOAK_REALM_NAME}",
  "enabled": true,
  "sslRequired": "external",
  "accessTokenLifespan": 900,
  "ssoSessionIdleTimeout": 1800,
  "ssoSessionMaxLifespan": 36000,
  "roles": {
    "client": {
      "${KEYCLOAK_CLIENT_NAME}": [
        {
          "name": "basic",
          "description": "Superuser with full access"
        },
        {
          "name": "advanced",
          "description": "Standard user access"
        }
      ]
    }
  },
  "clients": [
    {
      "clientId": "${KEYCLOAK_CLIENT_NAME}",
      "name": "ALOHA MORA",
      "enabled": true,
      "secret": "${KEYCLOAK_CLIENT_SECRET}",
      "clientAuthenticatorType": "client-secret",
      "publicClient": false,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "attributes": {
        "pkce.code.challenge.method": "S256"
      },
      "redirectUris": [
        "http://localhost:8083/*",
        "http://localhost:8080/*",
        "http://localhost:3000/*"
      ],
      "webOrigins": [
        "http://localhost:8083",
        "http://localhost:8080",
        "http://localhost:3000"
      ],
      "protocolMappers": [
        {
          "name": "audience-mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-audience-mapper",
          "consentRequired": false,
          "config": {
            "id.token.claim": "true",
            "access.token.claim": "true",
            "included.client.audience": "${KEYCLOAK_CLIENT_NAME}"
          }
        }
      ]
    }
  ],
  "users": [
    {
      "username": "testuser",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Test",
      "lastName": "User",
      "email": "testuser@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "clientRoles": {
        "${KEYCLOAK_CLIENT_NAME}": ["basic"]
      }
    },
    {
      "username": "superuser",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Mr",
      "lastName": "Super",
      "email": "superuser@example.com",
      "credentials": [
        {
          "type": "password",
          "value": "password",
          "temporary": false
        }
      ],
      "clientRoles": {
        "${KEYCLOAK_CLIENT_NAME}": ["advanced"]
      }
    }
  ]
}